{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./config/sequelize-config.js",
    "./migrations/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
